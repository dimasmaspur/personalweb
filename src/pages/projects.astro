---
import '../styles/global.css';
import Layout from '../components/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: "E-Commerce Platform",
    description: "A full-stack e-commerce solution with payment integration, user management, and admin dashboard. Built with modern technologies and best practices.",
    tech: ["React", "Node.js", "MongoDB", "Stripe", "AWS"],
    link: "https://demo-ecommerce.example.com",
    github: "https://github.com/dimaspurwanto/ecommerce-platform"
  },
  {
    title: "Task Management App",
    description: "A collaborative task management application with real-time updates, team collaboration features, and advanced project tracking.",
    tech: ["Vue.js", "Firebase", "Tailwind CSS", "Vuex"],
    link: "https://taskapp.example.com",
    github: "https://github.com/dimaspurwanto/task-management"
  },
  {
    title: "Portfolio Website",
    description: "A modern portfolio website built with Astro and Tailwind CSS, featuring smooth animations, responsive design, and optimal performance.",
    tech: ["Astro", "Tailwind CSS", "TypeScript", "Netlify"],
    link: "https://dimaspurwanto.com",
    github: "https://github.com/dimaspurwanto/portfolio"
  },
  {
    title: "Weather Dashboard",
    description: "Real-time weather application with location-based forecasts, interactive maps, and detailed weather analytics.",
    tech: ["React", "Chart.js", "OpenWeather API", "Styled Components"],
    link: "https://weather-dashboard.example.com",
    github: "https://github.com/dimaspurwanto/weather-dashboard"
  },
  {
    title: "Blog Platform",
    description: "A full-featured blog platform with markdown support, SEO optimization, and content management system.",
    tech: ["Next.js", "Prisma", "PostgreSQL", "TailwindCSS"],
    link: "https://blog-platform.example.com",
    github: "https://github.com/dimaspurwanto/blog-platform"
  },
  {
    title: "Mobile Finance App",
    description: "Personal finance mobile application with expense tracking, budget planning, and financial insights.",
    tech: ["React Native", "Redux", "Firebase", "Chart.js"],
    link: "https://financeapp.example.com",
    github: "https://github.com/dimaspurwanto/finance-app"
  }
];
---

<Layout title="Projects - Dimas Purwanto" description="Explore my portfolio of web development projects showcasing modern technologies and innovative solutions.">
  <Navigation />
  
  <!-- Header Section -->
  <section class="pt-32 pb-16 bg-black">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
        My <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Projects</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        A collection of projects I've worked on, showcasing various technologies and solving real-world problems.
      </p>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-20 relative overflow-hidden">
    <!-- Glassmorphism Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900/95 via-gray-800/90 to-black/95"></div>
    <div class="absolute inset-0 backdrop-blur-xl"></div>
    
    <!-- Floating Glass Elements -->
    <div class="absolute top-10 left-10 w-64 h-64 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-80 h-80 bg-gradient-to-br from-purple-500/15 to-pink-600/15 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-gradient-to-br from-green-500/10 to-blue-600/10 rounded-full blur-3xl animate-pulse delay-500"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <ProjectCard 
            title={project.title}
            description={project.description}
            tech={project.tech}
            link={project.link}
            github={project.github}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden">
    <!-- Glassmorphism Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-800/90 via-gray-700/85 to-gray-900/95"></div>
    <div class="absolute inset-0 backdrop-blur-2xl"></div>
    
    <!-- Floating Glass Elements -->
    <div class="absolute top-10 right-20 w-64 h-64 bg-gradient-to-br from-blue-400/20 to-purple-500/20 rounded-full blur-3xl animate-pulse delay-300"></div>
    <div class="absolute bottom-10 left-20 w-80 h-80 bg-gradient-to-br from-purple-400/15 to-pink-500/15 rounded-full blur-3xl animate-pulse delay-700"></div>
    
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-4 drop-shadow-lg">Interested in working together?</h2>
      <p class="text-xl text-gray-300 mb-8">
        I'm always open to discussing new opportunities and exciting projects.
      </p>
      
      <!-- Glassmorphism CTA Button -->
      <a 
        href="/#contact" 
        class="inline-flex items-center px-8 py-4 bg-white/10 text-white font-semibold rounded-full hover:bg-white/20 transition-all duration-300 border border-white/20 backdrop-blur-lg drop-shadow-lg"
      >
        <span>Get In Touch</span>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-8 bg-black text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">
        © 2024 Dimas Purwanto. Built with ❤️ using Astro & Tailwind CSS.
      </p>
    </div>
  </footer>
</Layout>
