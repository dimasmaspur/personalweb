				const btnText = document.getElementById('btn-text') as HTMLElement;
				const btnIcon = document.getElementById('btn-icon') as HTMLElement;
				const additionalProjectsContainer = document.getElementById('additional-projects') as HTMLElement;

				if (!loadMoreBtn || !btnText || !btnIcon || !additionalProjectsContainer) return;

				// Hide additional projects with animation
				additionalProjectsContainer.classList.add('opacity-0', 'translate-y-8');
				additionalProjectsContainer.classList.remove('opacity-100', 'translate-y-0');

				setTimeout(() => {
					additionalProjectsContainer.classList.add('hidden');
					
					// Update button back to "View All Projects"
					btnText.textContent = 'View All Projects';
					btnIcon.style.transform = 'rotate(0deg)';
					projectsLoaded = false;

					// Scroll back to projects section
					const initialProjects = document.getElementById('initial-projects');
					if (initialProjects) {
						initialProjects.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				}, 700);
			}

			// Load More Button Event Listener
			const loadMoreButton = document.getElementById('load-more-btn');
			if (loadMoreButton) {
				loadMoreButton.addEventListener('click', () => {
					if (projectsLoaded) {
						showLessProjects();
					} else {
						loadMoreProjects();
					}
				});
			}

			// Smooth scrolling for anchor links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', (e) => {
					e.preventDefault();
					const href = (anchor as HTMLAnchorElement).getAttribute('href');
					if (href) {
						const target = document.querySelector(href);
						if (target) {
							target.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					}
				});
			});

			// Mobile menu functionality
			const mobileMenuBtn = document.getElementById('mobile-menu-btn');
			const mobileMenu = document.getElementById('mobile-menu');
			
			if (mobileMenuBtn && mobileMenu) {
				mobileMenuBtn.addEventListener('click', () => {
					mobileMenu.classList.toggle('hidden');
				});
				
				// Close mobile menu when clicking on links
				const mobileLinks = mobileMenu.querySelectorAll('a[href^="#"]');
				mobileLinks.forEach(link => {
					link.addEventListener('click', () => {
						mobileMenu.classList.add('hidden');
					});
				});
			}

			// Navigation scroll effect
			window.addEventListener('scroll', () => {
				const scrolled = window.pageYOffset;
				const navBg = document.getElementById('nav-bg');
				
				if (navBg) {
					if (scrolled > 50) {
						navBg.style.opacity = '1';
					} else {
						navBg.style.opacity = '0';
					}
				}
				
				// Parallax scroll effect for hero section
				const hero = document.querySelector('.hero-parallax') as HTMLElement;
				if (hero) {
					hero.style.transform = `translateY(${scrolled * 0.5}px)`;
				}
			});

			// Intersection Observer for animations
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -100px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('animate-fade-in');
					}
				});
			}, observerOptions);

			// Observe all sections
			document.querySelectorAll('section').forEach(section => {
				observer.observe(section);
			});
		</script>
	</body>
