			<div class="absolute inset-0 bg-gradient-to-br from-black/95 via-gray-950/90 to-black/98"></div>
			<div class="absolute inset-0 backdrop-blur-3xl "></div>
			
			<!-- Floating Glass Elements -->
			<div class="absolute top-20 left-10 w-64 h-64 bg-gradient-to-br from-blue-400/35 to-purple-500/35 rounded-full blur-xl animate-pulse"></div>
			<div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-br from-purple-400/30 to-pink-500/30 rounded-full blur-xl animate-pulse delay-1000"></div>
			<div class="absolute top-1/2 left-1/2 w-80 h-80 bg-gradient-to-br from-green-400/25 to-blue-500/25 rounded-full blur-xl animate-pulse delay-500"></div>
			
			<div class="relative max-w-7xl mx-auto px-6 lg:px-8">
				<!-- Section Header -->
				<div class="mb-20">
					<div class="flex items-center mb-8">
						<span class="text-sm font-medium tracking-wider uppercase text-gray-400 mr-8">Featured Work</span>
						<div class="flex-1 h-px bg-gray-700"></div>
					</div>
					<h2 class="text-5xl lg:text-6xl font-bold text-white leading-tight">
						Selected<br>
						<span class="italic text-gray-400">Projects</span>
					</h2>
				</div>
				
				<!-- Projects Grid -->
				<div id="initial-projects" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
					{initialProjects.map((project, index) => (
						<div class="group relative">
							<!-- Glassmorphism Project Card -->
							<div class="relative rounded-3xl overflow-hidden backdrop-blur-2xl border-2 border-white/40 hover:border-white/60 transition-all duration-500 shadow-2xl">
								<!-- Glass Background -->
								<div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-30`}></div>
								<div class="absolute inset-0 bg-white/15 backdrop-blur-xl"></div>
								
								<!-- Project Image -->
								<div class="relative h-60 overflow-hidden rounded-t-3xl">
									<!-- Base image (object-cover) -->
									<img 
										src={project.image} 
										alt={project.title}
										class="w-full h-full object-cover transition-opacity duration-700 ease-in-out group-hover:opacity-0"
									/>
									<!-- Overlay image (object-contain) - hidden by default -->
									<img 
										src={project.image} 
										alt={project.title}
										class="absolute inset-0 w-full h-full object-contain opacity-0 transition-opacity duration-700 ease-in-out group-hover:opacity-100"
									/>
									<!-- Gradient Overlay for Better Text Readability -->
									<div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/10 to-black/40"></div>
									<!-- Project ID Badge on Image -->
									<div class="absolute top-4 left-4 w-12 h-12 bg-white/20 backdrop-blur-md rounded-xl border border-white/30 flex items-center justify-center">
										<span class="text-lg font-bold text-white drop-shadow-lg">{project.id}</span>
									</div>
									<!-- Status Badge on Image -->
									<div class="absolute top-4 right-4">
										<span class={`px-3 py-1 rounded-full text-xs font-medium backdrop-blur-md border border-white/30 ${
											project.status === 'Live' ? 'bg-green-500/30 text-green-200 border-green-400/40' :
											project.status === 'Beta' ? 'bg-yellow-500/30 text-yellow-200 border-yellow-400/40' :
											'bg-blue-500/30 text-blue-200 border-blue-400/40'
										}`}>
											{project.status}
										</span>
									</div>
								</div>
								
								<!-- Project Header -->
								<div class="relative p-6 z-10">
									<!-- Project Title & Subtitle -->
									<div class="mb-4">
										<div class="flex items-center justify-between mb-2">
											<h3 class="text-xl font-bold text-white drop-shadow-lg">{project.title}</h3>
											<span class="text-gray-400 text-sm">{project.year}</span>
										</div>
										<p class="text-gray-300 font-medium">{project.subtitle}</p>
									</div>
									
									<!-- Description -->
									<p class="text-gray-300 leading-relaxed mb-6">
										{project.description}
									</p>
									
									<!-- Tech Stack -->
									<div class="flex flex-wrap gap-2 mb-6">
										{project.tech.map(tech => (
											<span class="px-3 py-1 bg-white/10 text-gray-300 rounded-full text-sm font-medium backdrop-blur-sm border border-white/20">
												{tech}
											</span>
										))}
									</div>
									
									<!-- Project Actions -->
									<div class="flex gap-2">
										<a 
											href={project.link} target="_blank" rel="noopener noreferrer"
											class="inline-flex items-center px-4 py-2 bg-white/15 text-white font-medium text-sm rounded-full hover:bg-white/25 transition-all duration-300 border border-white/30 backdrop-blur-lg shadow-lg"
										>
											<span>View Project</span>
											<svg class="w-3 h-3 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
											</svg>
										</a>
									</div>
								</div>
								
								<!-- Hover Shine Effect -->
								<div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-white/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
							</div>
						</div>
					))}
				</div>
				
				<!-- Additional Projects Container (Hidden Initially) -->
				<div id="additional-projects" class="hidden grid grid-cols-1 lg:grid-cols-2 gap-8 mt-8 opacity-0 transform translate-y-8 transition-all duration-700">
